<% content_for :hero_head do %>
  <h1>Add Requirement Area</h1>
<% end %>

<% content_for :hero_lead do %>
  Add a requirement area to the academic program. Each requirement area consists of a specified number of required courses.
<% end %>

<% content_for :content do %>
  <%= render 'form', requirement: @requirement %>

  <% if params[:major] %>
    <%= link_to 'Back to AOC', major_path(params[:major]) %>
  <% else %>
    <%= link_to 'Back to AOCs', majors_path %>
  <% end %>
<% end %>
