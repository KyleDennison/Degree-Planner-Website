<div class="text-center">
  <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-custom" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address"%>

    <%= f.label :firstname, class: "sr-only" %>
    <%= f.text_field :firstname, autocomplete: "given-name", class: "form-control", placeholder: "First name" %>

    <%= f.label :lastname, class: "sr-only" %>
    <%= f.text_field :lastname, autocomplete: "family-name", class: "form-control", placeholder: "Last name" %>



    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>

    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm password" %>

    <hr class="mb-4">
    <div class="custom-control custom-checkbox">
      <%= f.label :faculty do %>
        <%= f.check_box :faculty %>
        I am a faculty member.
      <% end %>
    </div><br/>

    <%= f.submit "Create Account", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
</div>