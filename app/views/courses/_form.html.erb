      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <dib class="col">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </dib>
  </div>

  <div class="row mb-3">
    <dib class="col">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </dib>
  </div>

  <%= form.hidden_field :requirement, value: params[:requirement] %>

