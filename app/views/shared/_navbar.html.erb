<header>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <%= link_to "Major Decisions", root_path, class: "my-0 mr-md-auto font-weight-normal" %>
    <!--<h5 class="my-0 mr-md-auto font-weight-normal">NCF Planner</h5>-->
    <nav class="my-2 my-md-0 mr-md-3">
      <%= link_to "AOCs", majors_path, class: 'p-2 text-dark' %>
      <%= link_to "Courses", courses_path, class: 'p-2 text-dark' %>
    </nav>
    <% if user_signed_in? %>
      <a class="nav-item dropdown">
        <a class="p-2 text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.lastname %>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "Profile & Settings", current_user, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <% if current_user.faculty? %>
            <%= link_to "Declared Programs", declared_programs_path, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Academic Progress", completed_courses_path(user: current_user), class: "dropdown-item" %>
          <% end %>
          <div class="dropdown-divider"></div>
          <%= link_to "Signout", signout_path, class: "dropdown-item" %>
        </div>
      </a>
    <% else %>
      <%= link_to "Signup", signup_path, class: "btn btn-outline-primary" %>
      <%= link_to "Signin", signin_path, class: "btn btn-outline" %>
    <% end %>
  </div>
</header>